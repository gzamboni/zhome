#####################################
# Firefly III Terraform Variables
#####################################

# Required variables
#------------------

# Base domain for your infrastructure
domain = "example.com"

# Firefly III application key (used for Laravel encryption)
# Leave empty to auto-generate a secure 32-character key
# If provided, must be exactly 32 characters
firefly_app_key = ""

# Firefly III application password (for initial user setup)
# Required: Set this to a secure password for the first user
firefly_app_password = "your-secure-app-password-here"

# Database configuration
#---------------------

# Password for the Firefly database user
# Leave empty to auto-generate a secure password without special characters
# (Recommended: leave empty for auto-generation to avoid MySQL auth issues)
firefly_db_password = ""

# Access token for Firefly III API (required for importer service)
# This token is used by the data importer to connect to Firefly III
firefly_access_token = "your-firefly-iii-access-token"

# Database name for Firefly III
# Default: "firefly"
firefly_db_name = "firefly"

# Database user for Firefly III
# Default: "firefly"
firefly_db_user = "firefly"

# MySQL service configuration
#--------------------------

# Namespace where MySQL is deployed
# Default: "mysql"
mysql_namespace = "mysql"

# Name of the MySQL service
# Default: "mysql"
mysql_service_name = "mysql"

# Domain configuration
#-------------------

# Fully Qualified Domain Name for the Firefly III application
# Default: "financeiro.k3s.zhome.local"
fqdn = "finance.example.com"

# Fully Qualified Domain Name for the Firefly III Importer application
# Default: "importer.k3s.zhome.local"
importer_fqdn = "importer.example.com"

# Resource allocation
#------------------

# CPU request for the Firefly III pod
# Default: "10m"
cpu_request = "100m"

# Memory request for the Firefly III pod
# Default: "256Mi"
memory_request = "512Mi"

# Memory limit for the Firefly III pod
# Default: "512Mi"
memory_limit = "1Gi"
